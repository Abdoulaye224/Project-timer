{% extends 'base.html.twig' %}

{% block title %}Hello Page !{% endblock %}
{% block body %}

    <main role="main" class="container">

        <div class="starter-template" style="margin-top:100px; text-align:center">
            <h1>H O M E P A G E</h1>
        </div>
    <div id="general" style="display: flex; width: 100%">
    <div style="width:50%" >
        <form action="{{path('app_login') }}" method="post" >
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        <fieldset class="form-group" style="width:50%; margin-left:30px">
            <h1 class="h3 mb-3 font-weight-normal">sign in</h1>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-lg btn-primary" type="submit">
                Se connecter
            </button>
        </fieldset>
    </form>
    </div>
    <div style="width:50%">
        <h1 class="h3 mb-3 font-weight-normal">sign up</h1>

        {{ form(form) }}
    </div>
    </div>

    </main>{% endblock %}
