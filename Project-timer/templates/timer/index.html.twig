{% extends 'base.html.twig' %}


{% block title %}Démarrer un nouveau timer{% endblock %}

{% block head %} {% endblock %}

{% block body %}
    
    <!-- Ajout de la barre de navigation contenant le fichier CSS -->
    {% include 'layout/navbar.html.twig'%}

    <div class = "container">

        <table class = "table table-bordered" style = "text-align:center; margin-top:100px;">
            <thead class="thead-dark">
                <tr>
                    <th colspan="2" style="font-size: 20px;">Récapitulatif du temps passé sur le projet "{{ project.name }}"</th>
                </tr>
            </thead>

                <tr>
                    <td>Votre temps passé sur le projet</td>
                    <td> {{ projectUserTime.jour }} J : {{ projectUserTime.heur }} H : {{ projectUserTime.minute }} min : {{ projectUserTime.seconde }} s  </td>
                </tr>
                <tr>
                    <td>Temps passé par le groupe {{ team.name }}</td>
                    <td> {{ projectTeamTime.jour }} J : {{ projectTeamTime.heur }} H : {{ projectTeamTime.minute }} min : {{ projectTeamTime.seconde }} s </td>
                </tr>
                <tr style="background-color: yellow;">
                    <td><strong>Temps Global</strong></td>
                    <td><strong>{{ projectTime.jour }} J : {{ projectTime.heur }} H : {{ projectTime.minute }} min : {{ projectTime.seconde }} s</strong></td>
                </tr>

        </table>
        
        <br>

        <div class="start">
            <!-- Bouton permettant de démarrer un nouveau timer -->
            <a href="{{ path('timer-start',{idTeam: team.id, idProject: project.id}) }}" class="btn btn-success btn-start">
                <i class="fa fa-play" aria-hidden="true"></i>  Démarrer un nouveau timer
            </a>
        </div>

    </div>

{% endblock %}
