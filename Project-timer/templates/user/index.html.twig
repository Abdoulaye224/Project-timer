{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}
{% block head %} {% endblock %}
{% block body %}
   
    <!-- Ajout de la barre de navigation contenant le fichier CSS -->
    {% include 'layout/navbar.html.twig'%}

    <div class="container">
        <div Class="row justify-content-center">
            <h1 style="margin-top: 20px;">Liste des utilisateurs</h1>
            <table class="table table-bordered" style="margin-top: 10px; text-align: center;">
                <thead class="thead-dark">
                    <tr>
                        <th> Prénom </th>
                        <th> Nom </th>
                        <th> Email </th>
                    </tr>
                </thead>
            {# légèrement différent de php avec foreach userList as user #}
            <!-- Affichage de tous les utilisateurs de l'application -->
            {% for user in user_list %}
                    <tr>
                        <td>{{ user.firstName }} </td>
                        <td>{{  user.lastName|upper }}</td>
                        <td>{{ user.email }}</td>
                    </tr>
            {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}